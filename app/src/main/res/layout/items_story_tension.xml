<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7.6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="0dp"
            app:cardCornerRadius="3.8dp"
            android:layout_marginRight="7.6dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="14.4dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/menuImage_Id"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_blood_pressure"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_vertical"


                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <customfonts.MyTextView_Roboto_Regular
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_marginTop="5dp"
                                android:text="Systolique"
                                android:textColor="#262628"
                                android:textSize="13sp" />
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@color/BcBlack" />

                            <customfonts.MyTextView_Roboto_Regular
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_marginTop="5dp"
                                android:text="Diastolique"
                                android:textColor="#262628"
                                android:textSize="13sp" />
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@color/BcBlack" />

                            <customfonts.MyTextView_Roboto_Regular
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_marginTop="5dp"
                                android:text="Pouls"
                                android:textColor="#262628"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <customfonts.MyTextView_Roboto_Regular
                                android:id="@+id/txt_systolique"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_marginTop="5dp"
                                android:hint="Systo"
                                android:textColor="#262628"
                                android:textSize="13sp" />
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@color/BcBlack" />

                            <customfonts.MyTextView_Roboto_Regular
                                android:id="@+id/txt_diastolique"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_marginTop="5dp"
                                android:hint="Diasto"
                                android:textColor="#262628"
                                android:textSize="13sp" />
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:background="@color/BcBlack" />

                            <customfonts.MyTextView_Roboto_Regular
                                android:id="@+id/txt_pouls"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_marginTop="5dp"
                                android:hint="Pouls"
                                android:textColor="#262628"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            >
                            <customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="Le"
                                android:textColor="#262628"
                                android:textSize="11sp" />

                            <customfonts.MyTextView_Roboto_Regular
                                android:id="@+id/txt_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:hint="Date"
                                android:textColor="#262628"
                                android:textSize="11sp" />

                            <customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:text="Ã "
                                android:textColor="#262628"
                                android:textSize="11sp" />


                            <customfonts.MyTextView_Roboto_Regular
                                android:id="@+id/txt_heure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:hint="Heure"
                                android:textColor="#262628"
                                android:textSize="11sp" />



                        </LinearLayout>

                    </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="50dp"
                            android:id="@+id/img_status"
                            app:srcCompat="@drawable/ic_edit_item"
                            android:tint="@color/BgVert"
                            />


                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>

