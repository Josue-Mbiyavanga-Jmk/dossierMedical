<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7.6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="0dp"
            app:cardCornerRadius="3.8dp"
            android:layout_marginRight="7.6dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="14.4dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/menuImage_Id"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_glycemie"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_vertical"


                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="8dp"
                            >
                            <customfonts.MyTextView_Roboto_Regular
                                android:id="@+id/txt_resultat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="3dp"
                                android:hint="Resultat"
                                android:textColor="#262628"
                                android:textSize="14sp" />

                            <customfonts.MyTextView_Roboto_Regular
                                android:id="@+id/txt_unite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="5dp"
                                android:hint="unite"
                                android:textColor="@color/common_google_signin_btn_text_light_default"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="8dp"
                            >

                            <customfonts.MyTextView_Roboto_Regular
                                android:id="@+id/txt_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:hint="type"
                                android:gravity="center"
                                android:textColor="@color/common_google_signin_btn_text_light_default"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="8dp"
                            >
                            <customfonts.MyTextView_Roboto_Regular
                                android:id="@+id/txt_remarque"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:hint="Remarque"
                                android:textColor="@color/BcGridbis"
                                android:textSize="11sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:paddingRight="3dp"
                            >
                            <customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:text="Le"
                                android:textColor="@color/BcGridbis"
                                android:textSize="10sp" />

                            <customfonts.MyTextView_Roboto_Regular
                                android:id="@+id/txt_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:hint="Date"
                                android:textColor="@color/BcGridbis"
                                android:textSize="10sp" />

                            <customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="10dp"
                                android:text="Ã "
                                android:textColor="@color/BcGridbis"
                                android:textSize="10sp" />


                            <customfonts.MyTextView_Roboto_Regular
                                android:id="@+id/txt_heure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:hint="Heure"
                                android:textColor="@color/BcGridbis"
                                android:textSize="11sp" />



                        </LinearLayout>

                    </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:id="@+id/img_status"
                            app:srcCompat="@drawable/ic_edit_item"
                            android:tint="@color/BgVert"
                            />


                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>

