<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteColor"
    android:orientation="vertical"
    android:id="@+id/base"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            app:lottie_rawRes="@raw/passport"
            app:lottie_loop="true"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:layout_marginTop="50dp"
            app:lottie_autoPlay="true"
            android:layout_marginBottom="15dp"/>


        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reseignez ci-dessous vos coordonnÃ©es (username et mot de passe) pour vous connecter ou enregistrez-vous si vous etes nouveau."
            android:textColor="@color/BcGridbis"
            android:textSize="9.5sp"
            android:paddingTop="0dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="20dp"
            android:textAlignment="center"
            android:layout_marginTop="0dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rect_grid"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_marginTop="10dp">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="13dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/user"
                    app:tint="@color/BcGridbis" />

                <EditText
                    style="@style/edit_input_style_app"
                    android:layout_marginLeft="15.5dp"
                    android:hint="Adresse e-mail du medecin"
                    android:inputType="text"
                    android:id="@+id/edit_adress"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="5dp"
                android:background="@color/BcGridbis"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_marginTop="10dp">


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/pass"
                    app:tint="@color/BcGridbis" />

                <EditText
                    android:id="@+id/edit_pass"
                    style="@style/edit_input_style_app"
                    android:layout_marginLeft="15.5dp"
                    android:hint="Mot de passe"
                    android:inputType="textPassword"
                    android:maxLength="30"

                    />
            </LinearLayout>

        </LinearLayout>


        <customfonts.MyTextView_Roboto_Regular
            android:id="@+id/Btconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="86dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="86dp"
            android:background="@drawable/arrond_gris_noir"
            android:gravity="center_horizontal"
            android:paddingLeft="53dp"
            android:paddingTop="13dp"
            android:paddingRight="53dp"
            android:paddingBottom="13dp"
            android:text="Se connecter"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="13sp" />

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit_load"
            style="@style/SpinKitView.Large.FadingCircle"
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:fitsSystemWindows="true"
            android:indeterminate="true"
            app:SpinKit_Color="@color/BcBlack"


            />

        <customfonts.MyTextView_Roboto_Regular
            android:id="@+id/BtRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="86dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="86dp"
            android:background="@drawable/arrond_gris_noir"
            android:gravity="center_horizontal"
            android:paddingLeft="53dp"
            android:paddingTop="13dp"
            android:paddingRight="53dp"
            android:paddingBottom="13dp"
            android:text="S'enregistrer"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="13sp" />

    </LinearLayout>

    <TextView

        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="8sp"
        android:layout_marginBottom="10dp"
        android:text="@string/txt_copy_right"
        android:textColor="#c1bdbd"
        />
</RelativeLayout>