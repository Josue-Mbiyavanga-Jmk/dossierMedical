<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <customfonts.MyTextView_Roboto_Regular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remplissez les informations professionnelles"
        android:textColor="@color/BcGridbis"
        android:textSize="11.5sp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        android:layout_marginTop="0dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="13dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rect_grid"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#00000000"
            android:text="+243 | "
            android:layout_marginRight="10dp"
            android:textColor="@color/BcGridbis"
            android:textSize="15.4sp" />
        <EditText
            style="@style/edit_input_style_app"
            android:layout_marginLeft="55.5dp"
            android:layout_width="match_parent"
            android:hint="Téléphone"
            android:inputType="phone"
            android:maxLength="9"
            android:textSize="15.4sp"
            android:layout_alignParentRight="true"
            android:id="@+id/edt_phone"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="13dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rect_grid"
        >

        <EditText
            style="@style/edit_input_style_app"
            android:layout_marginLeft="15.5dp"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:id="@+id/edt_email"
            />
    </LinearLayout>

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/rect_grid"
        android:spinnerMode="dialog"
        android:id="@+id/spinner_civil"
        android:textColor="@color/BcGridbis"
        android:textSize="15sp"
        app:hintText="-- Etat-civil -- *"


        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="13dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/rect_grid"
        >

            <EditText
                style="@style/edit_input_style_app"
                android:id="@+id/edt_adresse"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Adresse"
                android:layout_marginLeft="15.5dp"
                android:fontFamily="@font/roboto_regular"
                android:inputType="text"
                 />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="13dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/rect_grid"
        >

        <EditText
            style="@style/edit_input_style_app"
            android:id="@+id/edt_remarque"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Remarque"
            android:layout_marginLeft="15.5dp"
            android:fontFamily="@font/roboto_regular"
            android:inputType="text"
            />

    </LinearLayout>


















    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/spin_kit_load_save"
        style="@style/SpinKitView.Large.FadingCircle"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fitsSystemWindows="true"
        android:indeterminate="true"
        android:layout_gravity="center_horizontal"
        app:SpinKit_Color="@color/BgVert"
        android:visibility="visible"

        />


</LinearLayout>


