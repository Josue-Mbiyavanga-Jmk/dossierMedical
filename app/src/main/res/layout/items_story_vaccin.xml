<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7.6dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="0dp"
            app:cardCornerRadius="3.8dp"
            android:layout_marginRight="7.6dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="14.4dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/menuImage_Id"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_vaccin"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_vertical"


                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="50dp"
                            android:hint="Nom du vaccin"
                            android:textColor="#262628"
                            android:textSize="16sp" />

                        <customfonts.MyTextView_Roboto_Regular
                            android:id="@+id/txt_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="50dp"
                            android:hint="Date du vaccin"
                            android:textColor="#262628"
                            android:textSize="12sp" />

                    </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="10dp"
                            android:id="@+id/img_status"
                            app:srcCompat="@drawable/ic_edit_item"
                            android:tint="@color/BgVert"
                            />


                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>

